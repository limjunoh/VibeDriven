<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/location_topview"
        android:background="#B30000FF"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_topview_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/location_name"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:text="@string/location_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal_topView"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_border">

            <TextView
                android:id="@+id/departureText"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="출발"
                android:textColor="#AAAAAA"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/departure"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="출발지를 검색하세요"
                android:textColor="#AAAAAA"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/destinationText"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:text="도착"
                android:textColor="#AAAAAA"/>

            <TextView
                android:id="@+id/destination"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="도착지를 검색하세요"
                android:textColor="#AAAAAA"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>